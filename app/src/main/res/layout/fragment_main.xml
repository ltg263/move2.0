<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="@dimen/dp_15"
        android:paddingVertical="@dimen/dp_10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/shape_fragment_topic_search"
                android:drawableLeft="@drawable/main_search_gray"
                android:gravity="center_vertical"
                android:hint="  搜索项目.用户.内容.话题"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_25"
                android:paddingTop="@dimen/dp_5"
                android:textColor="@color/black"
                android:textColorHint="@color/title_gray_aa"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/main_menu_publish"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:onClick="search"
                android:text="发表"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </LinearLayout>

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/magic_indicator_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:layout_collapseMode="pin" />

    <com.secretk.move.view.ViewPagerFixed
        android:id="@+id/vp_main_children"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</LinearLayout>