<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="360dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_app_update">

        <ImageView
            android:id="@+id/iv_cloes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_cloas_undate" />

        <TextView
            android:id="@+id/tv_update_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:lineSpacingExtra="@dimen/dp_10"
            android:maxLines="6"
            android:paddingHorizontal="@dimen/dp_25"
            android:textColor="@color/title_gray_66"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_bnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginHorizontal="@dimen/dp_35"
            android:background="@drawable/btn_max_selected_top_radius"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="抢先体验"
            android:textColor="@color/white" />
    </RelativeLayout>
</RelativeLayout>