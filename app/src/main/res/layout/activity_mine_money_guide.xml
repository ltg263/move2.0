                        android:gravity="right"
                        android:text="6/20"
                        android:textColor="@color/title_gray_66"
                        android:textSize="@dimen/sp_16" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
