                        android:textSize="@dimen/dp_12"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_fx_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_25"
                        android:layout_toLeftOf="@id/tv_fx_go"
                        android:drawableLeft="@drawable/ic_jrzb_fing"
                        android:drawablePadding="@dimen/dp_12"
                        android:gravity="center_vertical"
                        android:paddingVertical="@dimen/dp_3"
                        android:text="222"
                        android:textColor="@color/title_gray_66"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_fx_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_fx"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_toRightOf="@id/iv_fx"
                        android:text="2FIND／次，首次5FIND"
                        android:textColor="@color/title_gray"
                        android:textSize="@dimen/sp_14" />

                    <ProgressBar
                        android:id="@+id/pb_fx_jd"
