<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_gray"
    android:orientation="vertical">

    <com.secretk.move.view.AppBarHeadView
        android:id="@+id/head_app_server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f9f9f9" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cut_off_rule" />
    <!--https://segmentfault.com/a/1190000010066071-->
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srlEnablePreviewInEditMode="false">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:elevation="0dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/collapsing_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_10"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_10"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/dp_10">

                                    <TextView
                                        android:id="@+id/tv_user_name_y"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="EOS"
                                        android:textStyle="bold"
                                        android:textColor="@color/title_gray"
                                        android:textSize="@dimen/dp_20" />

                                    <TextView
                                        android:id="@+id/tv_user_name_z"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="/抽子"
                                        android:textColor="#888888"
                                        android:textSize="@dimen/dp_15" />

                                    <TextView
                                        android:id="@+id/tv_issue_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_35"
                                        android:text="发布时间：2017-08-10"
                                        android:textColor="#aaaaaa"
                                        android:textSize="@dimen/dp_10" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/cut_off_rule" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/tv_grade"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:textStyle="bold"
                                            android:text="168"
                                            android:textColor="@color/app_background"
                                            android:textSize="@dimen/sp_18" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/tv_grade"
                                            android:layout_centerHorizontal="true"
                                            android:text="@string/grade"
                                            android:textColor="#aaaaaa"
                                            android:textSize="@dimen/sp_12" />
                                    </RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tv_praise"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="116"
                                            android:textStyle="bold"
                                            android:textColor="#555555"
                                            android:textSize="@dimen/sp_15" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/grade_num"
                                            android:textColor="#aaaaaa"
                                            android:textSize="@dimen/sp_12" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tv_fans"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="168123"
                                            android:textStyle="bold"
                                            android:textColor="#555555"
                                            android:textSize="@dimen/sp_15" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/attention"
                                            android:textColor="#aaaaaa"
                                            android:textSize="@dimen/sp_12" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/iv_head"
                                android:layout_width="73dp"
                                android:layout_height="73dp"
                                android:layout_gravity="center_vertical"
                                android:src="@mipmap/ic_launcher" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_individual_resume"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_10"
                            android:text="商用分布式应用设计的一款区块链操作系统。"
                            android:textColor="#888888"
                            android:textSize="@dimen/dp_15" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/btn_review"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_35"
                                android:layout_margin="@dimen/dp_10"
                                android:layout_weight="1"
                                android:text="@string/review"
                                android:background="@drawable/shape_rectangle_topic"
                                android:textColor="@color/app_background" />

                            <Button
                                android:id="@+id/btn_attention"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_35"
                                android:layout_margin="@dimen/dp_10"
                                android:text="已关注"
                                android:layout_weight="1"
                                android:background="@drawable/shape_rectangle_topic"
                                android:textColor="@color/app_background" />
                        </LinearLayout>
                    </LinearLayout>
                </android.support.design.widget.CollapsingToolbarLayout>
            </android.support.design.widget.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@color/white"
                    app:tabIndicatorColor="@color/app_background"
                    app:tabPaddingBottom="@dimen/dp_5"
                    app:tabSelectedTextColor="@color/app_background"
                    app:tabTextColor="#aeaeae" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/cut_off_rule" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/cut_off_rule" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </android.support.design.widget.CoordinatorLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>