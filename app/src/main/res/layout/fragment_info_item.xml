<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_html"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_top_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_gray_ee"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_top_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2018.04.16    星期一"
            android:textColor="@color/theme_title"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_bzyhzc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_title"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_top"
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_15"
            android:layout_alignRight="@id/iv_dot_b"
            android:layout_marginRight="3dp"
            android:background="@color/cut_off_rule" />

        <ImageView
            android:id="@+id/iv_dot_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_time"
            android:layout_below="@id/view_top"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:src="@drawable/bule_dot"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_dot_g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_time"
            android:layout_below="@id/view_top"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:src="@drawable/gray_dot" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_dot_b"
            android:text="12:59"
            android:textColor="@color/title_gray_8c"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_site"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:maxLines="1"
            android:gravity="right"
            android:ellipsize="end"
            android:textColor="@color/theme_title"
            android:textSize="14sp"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_time"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/ic_shade_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_head_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="@dimen/dp_10"
                android:textColor="@color/title_gray"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_detail_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/item_line_spacing"
                android:textColor="@color/title_gray_7e"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_detail_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_5"
                android:drawableRight="@drawable/ic_info_right"
                android:paddingHorizontal="@dimen/dp_10"
                android:paddingVertical="@dimen/dp_10"
                android:text="查看详情"
                android:textColor="@color/title_gray_7e"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_info_z"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/selector_info_z"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="bottom"
                    android:padding="@dimen/dp_8"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:text="看涨234"
                    android:textColor="@drawable/selector_info_z_text"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_info_j"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:drawableLeft="@drawable/selector_info_j"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="bottom"
                    android:padding="@dimen/dp_8"
                    android:text="看跌234"
                    android:textColor="@drawable/selector_info_j_text"
                    android:textSize="@dimen/sp_14" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_line"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_info_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:drawableLeft="@drawable/ic_info_share"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="bottom"
                    android:padding="@dimen/dp_8"
                    android:text="分享"
                    android:textColor="@color/title_gray_aa"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ll"
            android:layout_alignRight="@id/iv_dot_b"
            android:layout_below="@id/iv_dot_b"
            android:layout_marginRight="3dp"
            android:background="@color/cut_off_rule" />
    </RelativeLayout>

</LinearLayout>