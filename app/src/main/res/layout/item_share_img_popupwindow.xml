<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_share"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="#80000000"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/share_circle_top"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_22"
            android:text="分享赚币"
            android:textColor="@color/title_gray"
            android:textSize="@dimen/sp_16" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_share_wechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_share_wechat"
                android:gravity="center_horizontal"
                android:text="微信好友"
                android:textColor="@color/title_gray"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_share_wechat_moments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_share_wechat_moments"
                android:gravity="center_horizontal"
                android:text="朋友圈"
                android:textColor="@color/title_gray"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_share_sina_weibo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_share_sina_weibo"
                android:gravity="center_horizontal"
                android:text="微博"
                android:textColor="@color/title_gray"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_share_qzone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_share_qzone"
                android:gravity="center_horizontal"
                android:text="空间"
                android:textColor="@color/title_gray"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_share_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_share_qq"
                android:gravity="center_horizontal"
                android:text="QQ"
                android:textColor="@color/title_gray"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_below"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_share_link"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_share_link"
                android:gravity="center_horizontal"
                android:text="复制链接"
                android:textColor="@color/title_gray"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_share_zzhd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_share_zz"
                android:gravity="center_horizontal"
                android:text="终止活动"
                android:textColor="@color/title_gray"
                android:textSize="@dimen/sp_12"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_share_bctp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_share_bstp"
                android:gravity="center_horizontal"
                android:text="保存图片"
                android:textColor="@color/title_gray"
                android:textSize="@dimen/sp_12"
                android:visibility="visible" />
            <TextView
                android:id="@+id/tv_share_report"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_share_report"
                android:gravity="center_horizontal"
                android:text="举报"
                android:visibility="invisible"
                android:textColor="@color/title_gray"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_share_kw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_share_qq"
                android:gravity="center_horizontal"
                android:text="QQ"
                android:textColor="@color/title_gray"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/ic_share_qq"
                android:gravity="center_horizontal"
                android:text="QQ"
                android:textColor="@color/title_gray"
                android:textSize="@dimen/sp_12"
                android:visibility="invisible" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:background="#f9f9f9"
            android:gravity="center"
            android:padding="@dimen/dp_18"
            android:text="取消"
            android:textColor="@color/title_gray" />
    </LinearLayout>

</RelativeLayout>