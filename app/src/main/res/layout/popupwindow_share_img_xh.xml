<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <ScrollView
        android:id="@+id/sv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_35">

        <RelativeLayout
            android:id="@+id/rl_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="320dp"
                android:layout_height="569dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_reward_hbbj" />

            <TextView
                android:id="@+id/tv_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150dp"
                android:text="100000FIND"
                android:textColor="#ab0c12"
                android:textSize="@dimen/sp_28"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_reward_hbk" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="FCion宣布解散运营团队，真的跑路了么？"
                android:textColor="#552919"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_35">


                <ImageView
                    android:id="@+id/iv_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_info_share_rwm" />

                <TextView
                    android:id="@+id/tv_end_sm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/tv_end_time"
                    android:layout_marginVertical="@dimen/dp_10"
                    android:text="扫码参与活动，领取巨额奖励"
                    android:textColor="#4a1c0b"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动截止时间2018.09.31 12:00"
                    android:textColor="#4a1c0b"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <include
        android:id="@+id/item_share_img_popupwindow"
        layout="@layout/item_share_img_popupwindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>