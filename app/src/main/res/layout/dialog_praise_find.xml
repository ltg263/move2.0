<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.89"
        android:background="@drawable/btn_circle_2dp">


        <TextView
            android:id="@+id/tv_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTop="@drawable/upvote_selected"
            android:padding="@dimen/dp_20"
            android:text="点赞成功"
            android:textColor="@color/app_background"
            android:textSize="@dimen/sp_12"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTop="@drawable/ic_check_yes"
            android:padding="@dimen/dp_20"
            android:text="复制成功"
            android:textColor="@color/app_background"
            android:textSize="@dimen/sp_12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/app_background"
            android:layout_marginTop="-18dp"
            android:layout_below="@id/tv_praise"
            android:paddingBottom="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTop="@drawable/selector_collect_img"
            android:padding="@dimen/dp_20"
            android:text="收藏成功"
            android:textColor="@drawable/selector_assist_text"
            android:textSize="@dimen/sp_12"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>