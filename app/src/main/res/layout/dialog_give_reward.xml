<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_dialog"
    android:orientation="vertical"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_dialog_bjcolor"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@color/white"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_log_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/title_gray"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cut_off_rule" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_give_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selected_give_reward"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="10"
                    android:textColor="@drawable/selected_give_text"
                    android:textSize="@dimen/dp_12" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="@dimen/dp_line" />

                <TextView
                    android:id="@+id/tv_give_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selected_give_reward"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="50"
                    android:textColor="@drawable/selected_give_text"
                    android:textSize="@dimen/dp_12" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="@dimen/dp_line" />

                <TextView
                    android:id="@+id/tv_give_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selected_give_reward"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="100"
                    android:textColor="@drawable/selected_give_text"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_give_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selected_give_reward"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="200"
                    android:textColor="@drawable/selected_give_text"
                    android:textSize="@dimen/dp_12" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="@dimen/dp_line" />

                <TextView
                    android:id="@+id/tv_give_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selected_give_reward"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="500"
                    android:textColor="@drawable/selected_give_text"
                    android:textSize="@dimen/dp_12" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="@dimen/dp_line" />

                <TextView
                    android:id="@+id/tv_give_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selected_give_reward"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="1000"
                    android:textColor="@drawable/selected_give_text"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="Or"
            android:textColor="@color/title_gray"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="自定义"
                android:textColor="@color/title_gray"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/et_log_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/selected_give_no"
                android:hint="可填写10~2000"
                android:padding="10dp"
                android:textColor="@color/title_gray"
                android:textColorHint="#b0c3d2"
                android:textCursorDrawable="@drawable/shape_edit_cursor"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:src="@drawable/ic_tiqu_qx" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_line"
            android:background="@color/cut_off_rule" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_log_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@drawable/selector_btn_dialog"
                android:textSize="18sp" />


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/cut_off_rule" />

            <TextView
                android:id="@+id/tv_log_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@drawable/selector_btn_dialog"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>