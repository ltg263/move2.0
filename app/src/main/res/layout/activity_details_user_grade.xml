<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.secretk.move.view.AppBarHeadView
        android:id="@+id/head_app_server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bar_background" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_line"
        android:background="@color/cut_off_rule" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@drawable/account_portrait" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EOC"
                    android:textColor="@color/title_gray"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/EOC"
                    android:textColor="@color/title_gray_66"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:background="@color/cut_off_rule" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="评分"
                android:textColor="@color/title_gray"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_line"
                android:background="@color/cut_off_rule" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="综合评分"
                        android:textColor="@color/title_gray"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:text="8.1"
                        android:textColor="@color/title_gray"
                        android:textSize="@dimen/sp_22"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="根据用户评分积善"
                        android:textColor="@color/title_gray"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_line"
                    android:layout_height="match_parent"
                    android:background="@color/cut_off_rule" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="wrap_content"
                            android:text="9-10分"
                            android:textColor="@color/title_gray_66"
                            android:textSize="@dimen/sp_12" />

                        <ProgressBar
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="6dp"
                            android:layout_marginHorizontal="@dimen/dp_5"
                            android:layout_weight="1"
                            android:progress="20"
                            android:progressDrawable="@drawable/pb_view_grade_small" />

                        <TextView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="66%"
                            android:textColor="@color/title_gray_66"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="wrap_content"
                            android:text="7-8分"
                            android:textColor="@color/title_gray_66"
                            android:textSize="@dimen/sp_12" />

                        <ProgressBar
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="6dp"
                            android:layout_marginHorizontal="@dimen/dp_5"
                            android:layout_weight="1"
                            android:progress="20"
                            android:progressDrawable="@drawable/pb_view_grade_small" />

                        <TextView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="66%"
                            android:textColor="@color/title_gray_66"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="wrap_content"
                            android:text="5-6分"
                            android:textColor="@color/title_gray_66"
                            android:textSize="@dimen/sp_12" />

                        <ProgressBar
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="6dp"
                            android:layout_marginHorizontal="@dimen/dp_5"
                            android:layout_weight="1"
                            android:progress="20"
                            android:progressDrawable="@drawable/pb_view_grade_small" />

                        <TextView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="66%"
                            android:textColor="@color/title_gray_66"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="wrap_content"
                            android:text="3-4分"
                            android:textColor="@color/title_gray_66"
                            android:textSize="@dimen/sp_12" />

                        <ProgressBar
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="6dp"
                            android:layout_marginHorizontal="@dimen/dp_5"
                            android:layout_weight="1"
                            android:progress="20"
                            android:progressDrawable="@drawable/pb_view_grade_small" />

                        <TextView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="6%"
                            android:textColor="@color/title_gray_66"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="wrap_content"
                            android:text="1-2分"
                            android:textColor="@color/title_gray_66"
                            android:textSize="@dimen/sp_12" />

                        <ProgressBar
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="6dp"
                            android:layout_marginHorizontal="@dimen/dp_5"
                            android:layout_weight="1"
                            android:progress="20"
                            android:progressDrawable="@drawable/pb_view_grade_small" />

                        <TextView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="66%"
                            android:textColor="@color/title_gray_66"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_line"
                android:background="@color/cut_off_rule" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="122" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_line"
                android:background="@color/cut_off_rule" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="熱門评分"
                android:textColor="@color/title_gray"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_line"
                android:background="@color/cut_off_rule" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_10" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/app_background"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="写评论"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>


</LinearLayout>