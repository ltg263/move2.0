<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_line"
        android:background="@color/cut_off_rule" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EOS点评挖矿第一弹"
            android:textColor="@color/theme_title"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2018-12-28"
            android:textColor="@color/theme_title"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_project_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toLeftOf="@id/tv_num"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@drawable/ic_yu_bj"
                android:padding="@dimen/dp_3"
                android:src="@drawable/ic_find_1" />

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="BIT"
                android:textColor="#393d46"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="/ 比特币"
                android:textColor="@color/theme_title_name"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ll_project_info"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_marginRight="100dp"
            android:layout_toLeftOf="@id/tv_status"
            android:text="26177"
            android:textColor="@color/theme_title_lan" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ll_project_info"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_3"
            android:text="已发放"
            android:textColor="@color/theme_title_red"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>
</LinearLayout>