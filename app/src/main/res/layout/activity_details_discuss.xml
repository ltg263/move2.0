<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.secretk.move.view.AppBarHeadView
        android:id="@+id/head_app_server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bar_background" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_line"
        android:layout_below="@id/head_app_server"
        android:background="@color/cut_off_rule" />

    <include
        android:id="@+id/no_data"
        layout="@layout/activity_loading_blank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view" />

    <RelativeLayout
        android:id="@+id/have_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/no_data"
        android:visibility="gone">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll"
            app:srlEnablePreviewInEditMode="false">

            <com.secretk.move.view.RecycleScrollView
                android:id="@+id/rcv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_post_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/title_gray"
                        android:textSize="@dimen/sp_22" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_line"
                        android:background="@color/cut_off_rule" />

                    <RelativeLayout
                        android:id="@+id/rl_ge_ren"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="@dimen/dp_10">

                        <ImageView
                            android:id="@+id/iv_create_user_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/tv_create_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/iv_create_user_icon"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@+id/iv_create_user_icon"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_16" />

                        <ImageView
                            android:id="@+id/iv_model_icon"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:layout_alignBottom="@id/tv_create_user_name"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_3"
                            android:layout_toRightOf="@+id/tv_create_user_name"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_create_user_signature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/iv_create_user_icon"
                            android:layout_alignStart="@+id/tv_create_user_name"
                            android:textColor="#aaaaaa"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/tv_follow_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/selector_follow_state"
                            android:paddingBottom="@dimen/dp_3"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_3"
                            android:textColor="@drawable/selector_follow_state_text" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/dp_10">


                        <TextView
                            android:id="@+id/tv_post_short_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/dp_2"
                            android:textColor="@color/title_gray"
                            android:textSize="@dimen/sp_16" />

                        <ImageView
                            android:id="@+id/iv_post_small_images"
                            android:layout_width="match_parent"
                            android:layout_height="187dp"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_2"
                            android:visibility="gone" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_img"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_create_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:textColor="@color/title_gray_66"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_line"
                        android:background="@color/cut_off_rule" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_10">

                        <TextView
                            android:id="@+id/tv_project_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/garden_crack"
                            android:paddingHorizontal="@dimen/dp_15"
                            android:paddingVertical="@dimen/dp_4"
                            android:textColor="#3b88f6"
                            android:textSize="@dimen/sp_14"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tv_tag_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:lineSpacingMultiplier="1.2"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="@color/app_background" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_line"
                        android:background="@color/cut_off_rule" />

                    <LinearLayout
                        android:id="@+id/ll_bottom_bnt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingHorizontal="@dimen/dp_15">

                        <TextView
                            android:id="@+id/tv_praise_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/selector_assist_img"
                            android:drawablePadding="@dimen/dp_10"
                            android:padding="@dimen/dp_15"
                            android:textColor="@drawable/selector_assist_text"
                            android:textSize="@dimen/sp_12" />


                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_line"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_collect_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/selector_collect_img"
                            android:drawablePadding="@dimen/dp_10"
                            android:padding="@dimen/dp_15"
                            android:text="收藏"
                            android:textColor="@drawable/selector_assist_text"
                            android:textSize="@dimen/sp_12" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_line"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_commendation_Num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_sponsor"
                            android:drawablePadding="@dimen/dp_10"
                            android:padding="@dimen/dp_15"
                            android:text="赞助"
                            android:textColor="#aaaaaa"
                            android:textSize="@dimen/sp_12" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:background="@color/background_gray" />

                    <LinearLayout
                        android:id="@+id/ll_rm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_rm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:padding="@dimen/dp_10"
                            android:textColor="@color/title_gray"
                            android:textSize="@dimen/sp_14"
                            android:visibility="visible" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_line"
                            android:background="@color/cut_off_rule" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_hot_review"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="@dimen/dp_10" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_line"
                            android:background="@color/cut_off_rule" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_zx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_zx"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:padding="@dimen/dp_10"
                            android:text="最新评测"
                            android:textColor="@color/title_gray"
                            android:textSize="@dimen/sp_14" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_line"
                            android:background="@color/cut_off_rule" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_new_review"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_10" />
                    </LinearLayout>
                </LinearLayout>
            </com.secretk.move.view.RecycleScrollView>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_line"
                android:background="@color/cut_off_rule" />

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5">

                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/tv_send"
                    android:background="@drawable/et_circle_bj"
                    android:drawableLeft="@drawable/ic_leave"
                    android:drawablePadding="@dimen/dp_5"
                    android:hint="留下你的评论..."
                    android:padding="@dimen/dp_10"
                    android:textColor="@color/title_gray"
                    android:textColorHint="@color/title_gray_aa"
                    android:textCursorDrawable="@drawable/shape_edit_cursor"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/btn_max_selected_radius"
                    android:paddingHorizontal="@dimen/dp_16"
                    android:paddingVertical="@dimen/dp_10"
                    android:text="发送"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>