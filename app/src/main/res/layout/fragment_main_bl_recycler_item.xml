<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_organization"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginVertical="@dimen/dp_10"
            android:scaleType="centerCrop" />


        <RelativeLayout
            android:id="@+id/rl_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_organization"
            android:padding="@dimen/dp_10">


            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvName"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="#aaaaaa"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/tvIsFollw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_follow"
                android:paddingBottom="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_3"
                android:textColor="@color/app_background" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_project"
            android:layout_toRightOf="@id/img_organization"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tvScore"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingHorizontal="@dimen/dp_10"
                android:textColor="@color/title_gray"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTitle"
                android:layout_marginTop="@dimen/dp_5"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/item_line_spacing"
                android:maxLines="3"
                android:paddingHorizontal="@dimen/dp_10"
                android:textColor="#7e7d7e"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/iv_file_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_160"
                android:layout_below="@+id/tvDesc"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_2"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDesc"
                android:layout_marginRight="@dimen/dp_10"
                android:visibility="gone" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/ll_below"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_context"
            android:layout_toRightOf="@id/img_organization"
            android:padding="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_project_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/garden_crack"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:textColor="#3b88f6"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_crack_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_project_code"
                android:paddingHorizontal="@dimen/dp_10"
                android:paddingVertical="@dimen/dp_2"
                android:singleLine="true"
                android:textColor="#3b88f6"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ll_below"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_10"
            android:paddingHorizontal="@dimen/dp_10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/upvote_normal" />

            <TextView
                android:id="@+id/tvPraise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:textColor="@color/title_gray_aa"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/img_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/comment" />

            <TextView
                android:id="@+id/tvComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:textColor="@color/title_gray_aa"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5" />

</LinearLayout>