<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_line"
        android:background="@color/cut_off_rule" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_15"
        android:paddingHorizontal="@dimen/dp_15">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/iv_commented_user_icon"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_head_silent" />

            <ImageView
                android:id="@+id/iv_model_icon"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_alignBottom="@id/iv_commented_user_icon"
                android:layout_alignRight="@id/iv_commented_user_icon"
                android:layout_gravity="bottom"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_commented_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/follow_status_0"
                android:textColor="@color/title_gray"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_comment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="@dimen/dp_2"
                android:text="今年以来，加密货币跌势难止数据显示，在截至6月25日的一"
                android:textColor="@color/title_gray"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_child_content1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/background_gray"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_5"
                android:paddingHorizontal="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5"
                android:text="游来游去的雨 :今年以来，加密货币跌势难止数据显示，在截至6月25日的。"
                android:textColor="@color/title_gray"
                android:textSize="@dimen/sp_14"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_child_content2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_gray"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="@dimen/dp_2"
                android:paddingHorizontal="@dimen/dp_10"
                android:paddingVertical="@dimen/dp_5"
                android:text="区块链回复@游来游去的雨 : 今年以来，加密货币跌势难止数据显示，在截至6月25日的。"
                android:textColor="@color/title_gray"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_gray">

                <TextView
                    android:id="@+id/tv_child_comments_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="@dimen/dp_2"
                    android:drawableRight="@drawable/ic_right_green"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_5"
                    android:text="共6条回复"
                    android:textColor="@color/app_background"
                    android:textSize="@dimen/sp_14"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="12312312"
                    android:textColor="#aaaaaa"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_praise_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableRight="@drawable/selector_assist_img"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingVertical="@dimen/dp_15"
                    android:text="111"
                    android:textColor="@drawable/selector_assist_text" />

                <TextView
                    android:id="@+id/tvComments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/comment"
                    android:drawablePadding="@dimen/dp_4"
                    android:gravity="bottom"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingVertical="@dimen/dp_10"
                    android:textColor="@color/title_gray_99"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>