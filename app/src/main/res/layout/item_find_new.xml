<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/home_find"
        android:layout_width="@dimen/dp_80"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="@dimen/dp_20">

        <ImageView
            android:id="@+id/iv_icon_p"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/ic_yu_bj"
            android:padding="@dimen/dp_8"
            android:src="@drawable/ic_find_1" />

        <ImageView
            android:id="@+id/iv_icon_u"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/ic_yu_bj"
            android:padding="@dimen/dp_1"
            android:src="@drawable/ic_find_1"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="stringhome_find_1"
            android:textColor="@color/theme_title"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</RelativeLayout>
