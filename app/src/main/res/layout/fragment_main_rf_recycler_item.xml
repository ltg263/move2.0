<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_follow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="center_vertical">


        <LinearLayout
            android:id="@+id/ll_user2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/shape_rf_user_background"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <ImageView
                android:id="@+id/img_user_head2"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/tvUser2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:text="老猫" />
            <TextView
                android:layout_marginLeft="@dimen/dp_5"
                android:id="@+id/tvUserDynamic2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvName"
                android:layout_toEndOf="@+id/tvName"
                android:textColor="#888888"
                android:text="关注了项目"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_release_time"
           android:layout_centerVertical="true"
            android:text="3小时"
            android:layout_alignParentRight="true"
            android:textColor="#c2c2c2"
            android:textSize="@dimen/sp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_line"
        android:background="#dddddd" />
    <RelativeLayout
        android:id="@+id/rl_project"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#fff"
        android:padding="@dimen/dp_15">
        <View
            android:id="@+id/view_center"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true" />
        <ImageView
            android:id="@+id/img_organization"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_above="@+id/view_center"
            android:layout_toRightOf="@id/img_organization"
            android:text="AOS"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />
        <TextView
            android:id="@+id/tv_english_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvName"
            android:layout_toEndOf="@+id/tvName"
            android:textColor="#aaaaaa"
            android:text="/nihao"
            android:textSize="@dimen/sp_12" />
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_below="@+id/view_center"
            android:layout_toRightOf="@id/img_organization"
            android:text="3-27 15:21"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="#aaaaaa"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/tvIsFollw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_follow"
            android:paddingBottom="@dimen/dp_3"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_3"
            android:text="+关注"
            android:textColor="@color/app_background" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALL-团队测评"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="8.5分"
            android:textStyle="bold"
            android:textColor="@color/app_background"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvScore"
            android:layout_marginTop="@dimen/dp_5"
            android:maxLines="2"
            android:text="以太坊系统自身带有一种叫做以太币以太坊系统自身带有一种叫做以太币以太坊系统自身带有一种叫做以太币以太坊系统自身带有一种叫做以太币以太坊系统自身带有一种叫做以太币"
            android:textColor="#7e7d7e"
            android:textSize="@dimen/sp_12" />
        <com.secretk.move.customview.NoDispatchTouchRecyclerView
            android:layout_below="@+id/tvDesc"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/ry_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_line"
        android:background="#dddddd" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="center_vertical">


        <LinearLayout
            android:id="@+id/ll_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/shape_rf_user_background"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <ImageView
                android:id="@+id/img_user_head"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/tvUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:text="老猫" />
            <TextView
                android:layout_marginLeft="@dimen/dp_5"
                android:id="@+id/tvUserDynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvName"
                android:layout_toEndOf="@+id/tvName"
                android:textColor="#888888"
                android:text="关注了项目"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#ffffff"

            android:orientation="horizontal"
            android:padding="@dimen/dp_15">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/upvote_normal" />

            <TextView
                android:id="@+id/tvPraise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="18"
                android:textColor="@color/app_background"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/comment" />

            <TextView
                android:id="@+id/tvComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="10"
                android:textColor="#aaaaaa"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="#dddddd" />
</LinearLayout>