<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_asset_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="測批-獎勵"
            android:textColor="@color/title_gray"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_asset_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_asset_name"
            android:text="2018-20-18 13:00:12"
            android:textColor="@color/title_gray_aa"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_asset_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="+5000"
            android:textColor="@color/title_gray"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_line"
        android:background="@color/cut_off_rule" />
</LinearLayout>