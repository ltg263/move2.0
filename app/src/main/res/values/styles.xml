<resources>

    <!-- Base application theme   Theme.AppCompat.Light.DarkActionBar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/login_background_top</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="actionMenuTextColor">@color/white</item> <!--颜色-->
    </style>

    <style name="main_tab_bottom">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/main_tab_text_color_selector</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>

        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- 去按钮立体效果 -->
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="mine_rl_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#ffffff</item>
        <item name="android:paddingBottom">@dimen/dp_5</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_20</item>
        <item name="android:paddingTop">@dimen/dp_5</item>
    </style>

    <style name="AppEditTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/login_background_top</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:keyTextColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Dialog_Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="RemindDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="selectorDialog" parent="@android:style/Theme.Dialog"> <!--name是我们在使用时要用到的资源的标志，parent是指当前的样式所继承的父类样式,自定义dialog-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--隐藏标题栏-->
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <!--这儿也很重要啊，我这儿用了一张透明的.9.png的图，当然用#00000000也是可以的，否则的话这儿出来后有一个黑色的背景-->
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="selectorDialog_bj" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/sp_17</item>
    </style>
    <style name="TabLayoutTextStyleProject">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <!-- 关注按钮 -->
    <style name="BtnSelectorFollow">
        <item name="android:layout_width">@dimen/dp_60</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@drawable/selector_follow_state_text_no_post</item>
        <item name="android:background">@drawable/selector_follow_state_no_post</item>
        <item name="android:paddingTop">@dimen/dp_3</item>
        <item name="android:paddingBottom">@dimen/dp_3</item>
    </style>
    <!-- 帖子有关的 关注按钮 -->
    <style name="BtnSelectorFollow_PostList">
        <item name="android:layout_width">@dimen/dp_60</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@drawable/selector_follow_state_text</item>
        <item name="android:background">@drawable/selector_follow_state</item>
        <item name="android:paddingTop">@dimen/dp_3</item>
        <item name="android:paddingBottom">@dimen/dp_3</item>
    </style>
    <!-- 赞助按钮 -->
    <style name="BtnSponsor">
        <item name="android:layout_width">95dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_sponsor_red</item>
    </style>
    <!-- 打假标签 -->
    <style name="TvCrackDown">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dp_3</item>
        <item name="android:paddingBottom">@dimen/dp_3</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:background">@drawable/shape_add_label_selected</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/app_background</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:visibility">gone</item>
    </style>
    <!-- 币种标签 -->
    <style name="TvProjectCode">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dp_3</item>
        <item name="android:paddingBottom">@dimen/dp_3</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:background">@drawable/garden_crack</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:visibility">gone</item>
    </style>
    <!--搜索框-->
    <style name="TvOReT_View_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/shape_fragment_topic_search</item>
        <item name="android:drawableLeft">@drawable/main_search_gray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">搜索项目.用户.内容.话题</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:textColor">@color/title_gray</item>
        <item name="android:textColorHint">@color/title_gray_aa</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
    </style>
</resources>
